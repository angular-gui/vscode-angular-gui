{
  "name": "angular-gui",
  "displayName": "GUI for Angular",
  "description": "Run Angular CLI from your browser",
  "version": "0.3.3",
  "publisher": "sasxa-net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-gui/vscode-angular-gui.git"
  },
  "icon": "angular-gui.png",
  "galleryBanner": {
    "color": "#FFC107",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Angular",
    "Angular CLI"
  ],
  "activationEvents": [
    "workspaceContains:**/.angular-cli.json"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.connectOffline",
        "title": "GUI for Angular: Start in Offline mode"
      },
      {
        "command": "extension.connectOnline",
        "title": "GUI for Angular: Start in Online mode"
      },
      {
        "command": "extension.rebuildConfiguration",
        "title": "GUI for Angular: Rebuild schematics"
      },
      {
        "command": "extension.disconnect",
        "title": "GUI for Angular: Stop"
      }
    ],
    "configuration": {
      "title": "GUI for Angular",
      "properties": {
        "angular-gui.port": {
          "type": "number",
          "default": 4300,
          "description": "Port for socket connection"
        },
        "angular-gui.rootDir": {
          "type": "string",
          "default": ".angular-gui",
          "description": "Workspace folder for GUI for Angular commands and settings"
        },
        "angular-gui.npmRunner": {
          "type": "string",
          "default": ".",
          "description": "Name for the runner script that can be used to excute commands from terminal by name: \"npm run . <name>\""
        },
        "angular-gui.commandOptions": {
          "type": "object",
          "description": "Command options' values and defaults",
          "properties": {
            "prefix": "array"
          },
          "default": {
            "environment": [
              "dev",
              "prod"
            ],
            "target": [
              "development",
              "production"
            ],
            "collection": [
              "@schematics/angular"
            ],
            "styleext": [
              "scss",
              "styl",
              "css"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "build": "sh prod.sh",
    "compile": "tsc -p ./",
    "dev": "sh dev.sh",
    "debug": "webpack",
    "package": "vsce package",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "serve:local": "node out/local.js",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "webpack",
    "watch:local": "webpack --config webpack.local.js --display minimal --watch",
    "watch": "webpack --watch"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "@types/shelljs": "^0.7.6",
    "@types/socket.io": "^1.4.31",
    "awesome-typescript-loader": "^3.3.0",
    "concurrently": "^3.5.0",
    "nodemon": "^1.12.1",
    "source-map-loader": "^0.2.3",
    "vscode": "^1.1.7",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@angular-devkit/schematics": "0.0.36",
    "ansi-to-html": "^0.6.3",
    "express": "^4.16.2",
    "ps-tree": "^1.1.0",
    "rxjs": "^5.5.2",
    "shelljs": "^0.7.8",
    "socket.io": "^2.0.4",
    "stoppable": "^1.0.4",
    "typescript": "^2.6.1"
  }
}
