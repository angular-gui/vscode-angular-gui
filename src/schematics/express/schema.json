{
  "$schema": "http://json-schema.org/schema",
  "id": "AngularGuiExpress",
  "title": "AngularGUI Express Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Specifies the name for the command script.",
      "default": "serve.dist"
    },
    "npmInstall": {
      "type": "boolean",
      "description": "Install npm dependencies",
      "default": true
    },
    "port": {
      "type": "number",
      "description": "Specifies the port for express server.",
      "default": "4200"
    },
    "rootDir": {
      "type": "string",
      "description": "Specifies the folder for the script.",
      "default": ".angular-gui"
    }
  }
}